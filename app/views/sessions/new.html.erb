<h1 class="text-center mt-5 text-white">Log in</h1>

<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "article-gradient shadow p-3 mb-3 bg-dark.bg-gradient rounded", local: true) do |f| %>

                <div class="form-group row mt-2"> 
                    <%= f.label :email, class: "col-2 col-form-label fs-5 fw-bold" %>
                    <div class="col-10">
                        <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>

                <div class="form-group row mt-2"> 
                    <%= f.label :password, class: "col-2 col-form-label fs-5 fw-bold" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center d-grid">
                    <%= f.submit "Log in", class: "btn btn-outline-primary btn-lg mt-4 fs-6 fw-bold" %>
                </div>
            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ Return to articles listing ]', articles_path, class: "text-white justify-content-center d-grid mt-3" %>
        </div>
    </div>
</div>