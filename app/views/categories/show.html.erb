<h1 class="text-center mt-5 text-white">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4">
        <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-warning" %>
    </div>
<% end %>

<h3 class="text-center mt-5 text-white">Articles</h3>

<div class="custom_pagination">
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="custom_pagination mb-5">
    <%= will_paginate @articles, :container => false %>
</div>
