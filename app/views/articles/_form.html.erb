<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "article-gradient shadow p-3 mb-3 bg-dark.bg-gradient rounded", local: true) do |f| %>
                <div class="form-group row"> 
                    <%= f.label :title, class: "col-2 col-form-label fs-5 fw-bold" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row mt-2"> 
                    <%= f.label :description, class: "col-2 col-form-label fs-5 fw-bold" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center d-grid">
                    <%= f.submit class: "btn btn-outline-primary btn-lg mt-4 fs-6 fw-bold" %>
                </div>
            <% end %>
        </div>

        <%= link_to '[ Return to articles listing ]', articles_path, class: "text-white justify-content-center d-grid mt-3" %>
       
    </div>
</div>