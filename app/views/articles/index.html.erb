<h1 class="text-center mt-5 text-white">Listing all articles</h1>
<div class="container">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-body rounded">
                    <div class="card-header fst-italic">
                    by <%= article.user.username if article.user %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-primary text-decoration-none" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                        <%= link_to "View", article_path(article), class: "btn btn-outline-primary" %>
                        <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-warning" %>
                        <%= link_to "Delete", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                    </div>
                    <div class="card-footer text-body-secondary">
                        <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>